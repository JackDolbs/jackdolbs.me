
@import url('https://combinatronics.com/kiwicopple/quick-font/master/css/circular.css');

#app
  min-height: 100vh
  background: #ffffff8
  font-family: "Circular", BlinkMacSystemFont, -apple-system, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif
    
  .content__default
    padding: 1.5rem
    padding-top: 50px
    max-width: 740px
    margin: 0 auto

  h1, h2, h3
    font-family: "Circular", BlinkMacSystemFont, -apple-system, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif

  img
    border-radius: 5px
    border: 1px solid #eee
  
  blockquote
    color: #444
    background: #efefef

  code 
    color: #444
    background: #efefef
    font-size: 0.8rem
    padding: 0.2rem
    border-radius: 3px

  pre 
    code 
      color: #ffffff
      background: transparent

  .content__default
    a 
      color: $textColor
      box-shadow: inset 0 -3px 0 -1px $accentColor
      transition: box-shadow .15s ease-in-out
      padding-bottom: 2px
      &:hover 
        color: #fff
        box-shadow: inset 0 -30px 0 -1px $accentColor;
  